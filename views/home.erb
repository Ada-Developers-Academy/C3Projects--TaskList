<h1>Welcome to the tasklist database</h1>

<a href="add_task">Add a new task to the list!</a>
<p>
  <% @new_array = [] %>
  <% @completed_tasks = [] %>
    <% @all_tasks.each do |task| %>
      <% if task[3] == "" %>
        <% @new_array.push(task) %>
        <% else %>
        <% @completed_tasks.push(task) %>
      <% end %>
    <% end %>

  <form method="get">
    <fieldset>
      <legend>To Do List:</legend>
      <ul>
      <% @new_array.each do |task| %>
        <li><input type="radio" name="task" value=<%= task[0] %> /><%= task %></li>
      <% end %>
      </ul>
      <input type="submit" value="Mark as complete"/>
    </fieldset>
  </form>

<pre>
  <%= params %>
  <%= @id %>
</pre>
    <fieldset>
      <legend>Completed Tasks:</legend>
      <ul>
        <% @completed_tasks.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </fieldset>
